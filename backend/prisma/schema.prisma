datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model CommandHistory {
  id        Int      @id @default(autoincrement())
  user      String
  command   String
  response  String
  success   Boolean
  createdAt DateTime @default(now())
}
